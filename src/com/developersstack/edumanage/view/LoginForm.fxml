         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="12.0" layoutY="133.0" prefHeight="30.0" prefWidth="279.0" promptText="Password">
