            <Font name="System Bold" size="11.0" />
         </font>
      </Button>
      <TextField fx:id="txtId" editable="false" layoutX="24.0" layoutY="73.0" prefHeight="29.0" prefWidth="121.0" promptText="Registration Id">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="txtStudent" layoutX="154.0" layoutY="73.0" prefHeight="29.0" prefWidth="173.0" promptText="Student (Search With Fill)">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Button fx:id="btn" layoutX="339.0" layoutY="189.0" mnemonicParsing="false" onAction="#saveOnAction" prefHeight="31.0" prefWidth="164.0" style="-fx-background-color: #18bdff;" text="Register">
