            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <RadioButton fx:id="rBtnPaid" layoutX="29.0" layoutY="150.0" mnemonicParsing="false" selected="true" text="Paid">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="paidState" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rBtnPending" layoutX="83.0" layoutY="150.0" mnemonicParsing="false" text="Pending">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </RadioButton>
   </children>
