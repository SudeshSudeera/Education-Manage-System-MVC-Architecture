<AnchorPane fx:id="context" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developersstack.edumanage.controller.SignupFormController">
   <children>
      <Label layoutX="302.0" layoutY="27.0" text="Sign Up" textFill="#0015ff">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Separator layoutX="302.0" layoutY="57.0" prefHeight="0.0" prefWidth="279.0" />
      <TextField fx:id="txtFirstName" layoutX="300.0" layoutY="89.0" prefHeight="31.0" prefWidth="136.0" promptText="First Name">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </TextField>
      <TextField fx:id="txtLastName" layoutX="443.0" layoutY="89.0" prefHeight="31.0" prefWidth="136.0" promptText="Last Name">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </TextField>
      <TextField fx:id="txtEmail" layoutX="300.0" layoutY="132.0" prefHeight="25.0" prefWidth="279.0" promptText="Email">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="300.0" layoutY="175.0" prefHeight="30.0" prefWidth="279.0" promptText="Password">
