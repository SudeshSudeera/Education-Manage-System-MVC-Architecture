            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="430.0" layoutY="283.0" text="OR" textFill="#4a0af8">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <ImageView fitHeight="400.0" fitWidth="279.0" pickOnBounds="true">
         <image>
            <Image url="@../assets/bg-signup.jpg" />
         </image>
      </ImageView>
